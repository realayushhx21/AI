import java.util.*;

public class Main {

    static int V;                   
    static List<Integer>[] graph;  
    static int[] color;            

    // Check if assigning 'col' to vertex 'v' is valid
    static boolean isSafe(int v, int col) {
        for (int neigh : graph[v]) {
            if (color[neigh] == col)
                return false;
        }
        return true;
    }

    // Backtracking coloring method
    static boolean solveColoring(int v, int m) {

        if (v == V) return true;

        for (int col = 1; col <= m; col++) {
            if (isSafe(v, col)) {
                color[v] = col;

                if (solveColoring(v + 1, m))
                    return true;

                color[v] = 0; // backtrack
            }
        }
        return false;
    }

    static void addEdge(int u, int v) {
        graph[u].add(v);
        graph[v].add(u);
    }

    public static void main(String[] args) {

        V = 4;
        
        // FIX: Safe generic array creation
        @SuppressWarnings("unchecked")
        List<Integer>[] temp = (ArrayList<Integer>[]) new ArrayList[V];
        graph = temp;

        for (int i = 0; i < V; i++)
            graph[i] = new ArrayList<>();

        // edges
        addEdge(0, 1);
        addEdge(0, 2);
        addEdge(1, 2);
        addEdge(1, 3);

        int m = 3; 
        color = new int[V];

        if (solveColoring(0, m)) {
            System.out.println("Valid Coloring Found:");
            for (int v = 0; v < V; v++)
                System.out.println("Vertex " + v + " â†’ Color " + color[v]);
        } else {
            System.out.println("No valid coloring possible.");
        }
    }
}
