import java.util.*;

public class Main {

    static int V;                   // number of vertices
    static List<Integer>[] graph;  // adjacency list
    static int[] color;            // stores assigned colors (0 = uncolored)

    // Check if assigning 'col' to vertex 'v' does not violate constraints
    static boolean isSafe(int v, int col) {
        for (int neigh : graph[v]) {
            if (color[neigh] == col)  // adjacent vertex has same color
                return false;
        }
        return true;
    }

    // Backtracking function to color graph
    static boolean solveColoring(int v, int m) {

        if (v == V) return true; // all vertices colored

        for (int col = 1; col <= m; col++) { // try all colors

            if (isSafe(v, col)) { 
                color[v] = col; // assign color

                if (solveColoring(v + 1, m)) // move to next vertex
                    return true;

                color[v] = 0; // backtrack
            }
        }
        return false;
    }

    static void addEdge(int u, int v) { // add undirected edge
        graph[u].add(v);
        graph[v].add(u);
    }

    public static void main(String[] args) {

        V = 4; // example graph with 4 nodes
        graph = new ArrayList[V];

        for (int i = 0; i < V; i++)
            graph[i] = new ArrayList<>();

        // sample edges
        addEdge(0, 1);
        addEdge(0, 2);
        addEdge(1, 2);
        addEdge(1, 3);

        int m = 3; // number of colors available

        color = new int[V];

        if (solveColoring(0, m)) {
            System.out.println("Valid Coloring Found:");
            for (int v = 0; v < V; v++)
                System.out.println("Vertex " + v + " â†’ Color " + color[v]);
        } else {
            System.out.println("No valid coloring possible.");
        }
    }
}
