import java.util.*;

class QueenState {
    int[] positions; // positions[i] = column of queen in row i
    int row;         // current row to place queen
    QueenState parent;

    QueenState(int[] positions, int row, QueenState parent) {
        this.positions = positions.clone();
        this.row = row;
        this.parent = parent;
    }

    // Print the chessboard
    void printBoard() {
        for (int i = 0; i < 8; i++) {
            for (int j = 0; j < 8; j++) {
                if (i < row && positions[i] == j)
                    System.out.print("Q ");
                else
                    System.out.print(". ");
            }
            System.out.println();
        }
        System.out.println();
    }

    // Print the entire sequence of placements
    void printPath() {
        if (parent != null) parent.printPath();
        printBoard();
    }
}

public class Main {

    // Check if placing queen at (row, col) is safe
    static boolean isSafe(int[] positions, int row, int col) {
        for (int i = 0; i < row; i++) {
            int prevCol = positions[i];
            // same column OR diagonal attack
            if (prevCol == col || Math.abs(prevCol - col) == Math.abs(i - row))
                return false;
        }
        return true;
    }

    public static void main(String[] args) {

        Stack<QueenState> stack = new Stack<>();
        stack.push(new QueenState(new int[8], 0, null)); // start with empty board

        while (!stack.isEmpty()) {
            QueenState curr = stack.pop(); // DFS => LIFO (deep first)

            // If all queens placed â†’ solution found
            if (curr.row == 8) {
                System.out.println("Solution found:");
                curr.printPath();
                return;
            }

            // Try placing queen in each column for the current row
            for (int col = 0; col < 8; col++) {
                if (isSafe(curr.positions, curr.row, col)) {
                    int[] newPos = curr.positions.clone();
                    newPos[curr.row] = col;

                    // Add next state to stack (DFS)
                    stack.push(new QueenState(newPos, curr.row + 1, curr));
                }
            }
        }

        System.out.println("No solution found.");
    }
}
