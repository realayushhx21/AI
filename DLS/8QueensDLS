import java.util.*;

class QueenState {
    int[] board;     // board[row] = column of queen
    int depth;       // number of queens placed
    QueenState parent;

    QueenState(int[] board, int depth, QueenState parent) {
        this.board = board.clone();
        this.depth = depth;
        this.parent = parent;
    }

    void printBoard() {
        for (int r = 0; r < 8; r++) {  // print full chessboard
            for (int c = 0; c < 8; c++) {
                if (r < depth && board[r] == c) System.out.print("Q ");
                else System.out.print(". ");
            }
            System.out.println();
        }
        System.out.println();
    }

    void printPath() {
        if (parent != null) parent.printPath();
        printBoard();
    }
}

public class Main {

    static int DEPTH_LIMIT = 8;

    static boolean isSafe(int[] board, int row, int col) {
        for (int r = 0; r < row; r++) {
            if (board[r] == col) return false;
            if (Math.abs(board[r] - col) == Math.abs(r - row)) return false;
        }
        return true;
    }

    public static void main(String[] args) {

        Stack<QueenState> stack = new Stack<>();
        stack.push(new QueenState(new int[8], 0, null));

        while (!stack.isEmpty()) {
            QueenState curr = stack.pop();

            if (curr.depth == 8) {
                System.out.println("Solution found within depth limit:");
                curr.printPath();
                return;
            }

            if (curr.depth == DEPTH_LIMIT) continue;

            int row = curr.depth;

            for (int col = 0; col < 8; col++) {
                if (isSafe(curr.board, row, col)) {
                    int[] newBoard = curr.board.clone();
                    newBoard[row] = col;
                    stack.push(new QueenState(newBoard, row + 1, curr));
                }
            }
        }

        System.out.println("No solution found.");
    }
}
